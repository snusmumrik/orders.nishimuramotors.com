= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :supplier
    = f.select :supplier, options_for_select(@suppliers, @account.supplier), {include_blank: true}, class: "form-control"
  .field
    = f.label :identifier
    = f.text_field :identifier, class: "form-control"
  .field
    = f.label :password
    = f.password_field :password, class: "form-control"
  .actions
    = f.submit t("links.save"), class: "btn btn-default"
    = link_to t("links.back"), accounts_path, class: "btn btn-default"
