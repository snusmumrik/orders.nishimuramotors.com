= form_for @supplier do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supplier.errors.count, "error")} prohibited this supplier from being saved:"
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :spree_product
    %p= label_tag @spree_product.name
    = f.hidden_field :spree_product_id, value: params[:id], class: "form-control"
  .field
    = f.label :ngsj
    = f.text_field :ngsj, class: "form-control"
  .field
    = f.label :iiparts
    = f.text_field :iiparts, class: "form-control"
  .field
    = f.label :amazon
    = f.text_field :amazon, class: "form-control"
  .field
    = f.label :rakuten
    = f.text_field :rakuten, class: "form-control"
  .field
    = f.label :yahoo
    = f.text_field :yahoo, class: "form-control"
  .actions
    = f.submit t("links.save"), class: "btn btn-default"
    = link_to t("links.back"), spree_product_path(params[:id]), class: "btn btn-default"
